---
// Click button, get confetti!
// Styled by Tailwind :)
---

<button class="confetti rounded-full py-1 px-4 text-amber-500 ring-1 ring-inset ring-amber-500 font-semibold focus:outline-none focus:ring-2 focus:ring-amber-400 focus:ring-opacity-75">
	<slot />
</button>

<script>
	import confetti from 'canvas-confetti';
	const confettiButton = document.body.querySelector('button.confetti')
	confettiButton.addEventListener('click', () => confetti({
			particleCount: 100,
			spread: 70,
			origin: { x: 0.3, y: 0.4 },
			angle: 55
		})
	);
</script>
