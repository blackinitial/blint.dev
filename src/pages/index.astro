---
import MainLayout from '../layouts/main.astro';
import Button from '../components/Button.astro';
import Icon, { Props as IconProps } from '../components/Icon.astro';

const name: string = "Ibrohim Hanafi"
const role: string = `Frontend Developer & Jr. Product Designer`
const description = "A self-taught developer, tech researcher, and lifelong learner from Indonesia."
// const description: string = `A self-taught developer, tech researcher, product designer, and lifelong learner from Indonesia. This individual possesses a unique set of skills that sets them apart in the tech industry. 
// 	With a passion for technology and design, he has honed their skills in frontend development, product design, and research. 
// 	His ability to adapt and learn quickly has allowed him to stay current with industry trends and advancements. 
// 	As a creative problem-solver, he brings a unique perspective to the development process and has a talent for creating user-friendly, visually appealing products which is a valuable asset.`
const socials: { title: string, icon: IconProps['icon'], url: string }[] = [
	{ title: 'Github', icon: 'github-logo', url: 'https://github.com/blackinitial' },
	{ title: 'Codepen', icon: 'codepen-logo', url: 'https://codepen.io/blackinitial' },
	{ title: 'Twitter', icon: 'twitter-logo', url: 'https://twitter.com/bl_int' },
	{ title: 'Facebook', icon: 'facebook-logo', url: 'https://www.facebook.com/ibrohim.mahmud.hanafi' },
	{ title: 'Instagram', icon: 'instagram-logo', url: 'https://www.instagram.com/bl_int/' },
	{ title: 'LinkedIn', icon: 'linkedin-logo', url: 'https://www.linkedin.com/in/blackinitial' },
]
const mainSkill: { icon: IconProps['icon'], title: string, subtitle: string }[] = [
	{ icon: 'bonding-box', title: 'Design', subtitle: 'Designing user-friendly interfaces and experiences' },
	{ icon: 'code', title: 'Code', subtitle: 'Solving problems with code to develop modern apps' },
	{ icon: 'rocket-launch', title: 'Growth', subtitle: 'Passionate about growth and learning' },
]
---

<MainLayout title={`${name} - ${role}`} description={description}>
	<section id="hero-home" aria-labelledby="hero-home" class="relative scroll-mt-14 pb-3 pt-8 px-4 md:px-0 sm:scroll-mt-32 sm:pb-16 sm:pt-10 lg:pt-16 h-full">
		<div class="relative mx-auto max-w-5xl pt-16 pb-8 sm:px-6">
			<div class="bg-card pt-px drop-shadow-md rounded-lg mb-4">
				<div class="relative mx-auto -mt-16 h-44 w-44 overflow-hidden rounded-full bg-slate-200 drop-shadow-xl md:float-right md:h-64 md:w-64 md:[shape-outside:circle(40%)] lg:mr-20 lg:h-72 lg:w-72">
					<img src="/avatar.jpeg" width="400" height="711" alt="Ibrohim Avatar Image" class="absolute inset-0 h-full w-full object-cover">
				</div>
				<div class="text-center md:text-left px-4 py-10 sm:px-10 sm:py-16 md:py-20 lg:px-20">
					<Button>Say Hi üëãüèª!</Button>
					<p class="mt-8 font-display text-3xl sm:text-4xl md:text-5xl font-extrabold tracking-normal leading-tight text-slate-900">
						<span class="block shining-text">{name} ‚Äì</span>
						<span class="text-card-foreground" set:html={role.replace("&", "& <br />")}/>
					</p>
					<p class="mt-4 text-2xl md:text-3xl text-muted-foreground prose">{description}</p>

					<div class="mt-4 flex flex-row flex-wrap items-center justify-center gap-6 md:gap-8">
						{socials.map(({ title, url, icon }) => (
							<div class="mt-8">
								<a target="_blank" href={url} title={`Follow on ${title}`} class="inline-flex items-center text-base font-medium tracking-tight text-amber-500 hover:text-amber-300">
									<Icon icon={icon} size="1.75em" color="hsl(var(--primary))" gradient />
								</a>
							</div>
						))}
					</div>
				</div>
			</div>

			<div class="flex flex-wrap md:flex-nowrap gap-4 mb-12">
				{mainSkill.map(({ icon, title, subtitle }) => (
					<div class="w-full md:w-1/3 bg-card drop-shadow-md rounded-lg p-8">
						<div class="mb-2">
							<Icon icon={icon} size="3em" color="hsl(var(--primary))" />
						</div>
						<h2 class="font-extrabold text-2xl text-card-foreground mb-2">{title}</h2>
						<p class="text-xl text-muted-foreground">{subtitle}</p>
					</div>
				))}
			</div>
		</div>
	</section>
</MainLayout>

<style>
.shining-text {
	@apply text-transparent bg-clip-text bg-gradient-to-br from-amber-100 via-amber-500 to-amber-700;
  animation: shine 3s linear infinite;
}

@keyframes shine {
  0%, 100% {
    background-size: 200% 200%;
    background-position: left center;
  }
  50% {
    background-size: 200% 200%;
    background-position: right center;
  }
}
</style>